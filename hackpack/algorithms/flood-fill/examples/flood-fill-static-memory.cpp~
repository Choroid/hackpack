
#include<time.h>        
#include<cmath>
#include<stdlib.h>
#include<iostream>

using namespace std;

void floodfill4(int graph[][50],int Sy,int Sx,int oldnumber,int newnumber){
	 
	
  if(graph[Sy][Sx]!= oldnumber) return;
  
  graph[Sy][Sx] = newnumber;
  floodfill4(graph, Sy-1, Sx, oldnumber,newnumber);
  floodfill4(graph, Sy+1, Sx, oldnumber,newnumber);
  floodfill4(graph, Sy, Sx-1, oldnumber,newnumber);
  floodfill4(graph, Sy, Sx+1, oldnumber,newnumber);
    
}

int main(){
  
  int graph[20][50];
  cout << "\n";
  for(int y=0;y<20;y++){
    for(int x=0;x<50;x++){
      if ((y ==  4 && x >= 18 && x < 30)|| 
          (x == 18 && y >=  4 && y <  8)||
          (x == 30 && y >=  4 && y <  8)||
          (y ==  7 && x >= 12 && x < 18)||
          (y ==  7 && x >= 30 && x < 36)||
          (x == 12 && y >=  7 && y < 11)||
          (x == 36 && y >=  7 && y < 11)||
          (y == 11 && x >= 12 && x < 18)||
          (y == 11 && x >= 30 && x < 37)||
          (x == 18 && y >= 11 && y < 14)||
          (x == 30 && y >= 11 && y < 14)||
          (y == 14 && x >= 18 && x < 31))
                                       
        graph[y][x] = 0;
      else
        graph[y][x] = 2;
        cout << graph[y][x];
    } 
    cout << "\n";
  }
  cout << "\n";
  cout << "\n";
        
  int oldnumber=2;
  int newnumber=1;
  int Sx,Sy;
  Sx= 24;
  Sy=  9;
       
  floodfill4(graph, Sy, Sx,oldnumber,newnumber);  
   
  for(int i=0; i < 20; i++){
    for(int j=0; j < 50; j++){
	   cout << graph[i][j];
	 } cout << "\n";     
  }    
  cout << "\n";
  cout << "\n"; 
  
  return 0;
}  
